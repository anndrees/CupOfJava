<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorCreateItem" minHeight="402.0" minWidth="478.0" prefHeight="405.0" prefWidth="480.0" stylesheets="@../app/assets/styles/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SaveTicketController">
    <children>
        <TextField fx:id="txtNombre" alignment="CENTER" layoutX="40.0" layoutY="172.0" prefHeight="35.0" prefWidth="400.0" promptText="Nombre">
            <font>
                <Font name="Rubik-Bold" size="18.0" />
            </font>
        </TextField>
        <Button fx:id="btnCreateTicket" layoutX="40.0" layoutY="260.0" mnemonicParsing="false" onAction="#createOpenTicket" onMouseClicked="#createOpenTicket" prefHeight="70.0" prefWidth="400.0" text="Crear ticket">
            <font>
                <Font name="Rubik-Bold" size="20.0" />
            </font>
        </Button>
        <ImageView fx:id="imgLogo" fitHeight="150.0" fitWidth="200.0" layoutX="140.0" layoutY="33.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../app/assets/imgs/logo.png" />
            </image>
        </ImageView>
        <Button fx:id="btnCancelar" layoutX="40.0" layoutY="334.0" mnemonicParsing="false" onAction="#cancelar" prefHeight="38.0" prefWidth="400.0" text="Cancelar">
            <font>
                <Font name="Rubik-Bold" size="20.0" />
            </font>
        </Button>
        <ComboBox fx:id="cboxTipoTicket" layoutX="40.0" layoutY="215.0" prefHeight="35.0" prefWidth="400.0">
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </ComboBox>
    </children>
</AnchorPane>
