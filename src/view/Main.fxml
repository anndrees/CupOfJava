            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnCobrar" disable="true" layoutX="455.0" layoutY="69.0" mnemonicParsing="false" prefHeight="75.0" prefWidth="415.0" text="COBRAR">
